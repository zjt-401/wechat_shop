/* 头部服务商 */

.headerContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 10px 0;
    position: relative;
    border-radius: 0.4em;
    overflow: hidden;
}

.header_bg_banner {
    width: 100%;
}

.header_bg_banner_2 {
    width: 100%;
    padding-top: 0.4em;
}

.header_bg_banner image {
    width: 100%;
    height: 9em;
}

