   color: #fff !important;
}

.sureButn{
  width: 100%;
  height: 2.6em;
  color: #fff;
  background: deeppink;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0.4em;
}
.sureButnType{
  width: 45%;
  height: 2.6em;
  color: #fff;
  background: deeppink;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0.4em;
}
.ItemCountDell{
  padding: 0.4em 0;
  height: 3em;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.error_view{
  padding: 0.4em 0;
  color: #fff;
  border-radius:0.4em;
  text-indent:0.4em;

}
