.userinfo_list_container{

}

.userinfo_list{
  display: flex;
  flex-direction: column;
  margin: 20rpx 30rpx;
  box-sizing: border-box;
  border-radius:18rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.userinfo_list_item{
  padding:1em;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  
  overflow: hidden;
}
.userinfo_list_item_left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userinfo_list_item image{
  width: 1.2em;
  height:1.2em;
}
.userinfo_list_item_text{
  margin-left: 1em;
  color: #555;
}