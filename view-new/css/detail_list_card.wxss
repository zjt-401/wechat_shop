.detail_list_card{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center; 
  flex-wrap: wrap;
  padding: 10px 0px 10px 10px;
  background: #f9f9f9; 
} 
.detail_list_card .card_items:last-child{
  margin-bottom: 0;
}



.card_items{
  margin-bottom: 10px;
  width: 100%;
  box-sizing: border-box;
  border-right: 10px solid #f9f9f9;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
  position: relative;
  padding-bottom: 10px; 
}
.card_items image{
  padding-top: 10px;
  width: 98%;
  height: 98%;
}
.card_items > .card_items_bottom{
  position: absolute;
  bottom: 10px;
  width: 100%;
  overflow: hidden;
  background: rgba(255,255,255,0.8);
  
}

.card_items_bottom > view{
 
  overflow: hidden;
  padding: 5px 10px 8px 10px;
  font-size: 18px;
  color: #333;
  line-height: 21px;
  height:36px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.card_items_bottom_Info > text{
  margin: 0 5px;
}

.card_items_bottom > text{
  text-align: left;
  overflow: hidden;
  padding: 5px 15px 8px 15px;
  font-size: 16px;
  line-height: 28px;
}