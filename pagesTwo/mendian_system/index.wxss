 .container{
   position: absolute;
  width: 100%;
  height: 100%;
  background: #f9f9f9;
} 
.info_image_container{
  margin-bottom: 1em;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.info_image_container image{
  width: 100%;
  height: 100%;
}

.inputGroup{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}

.input_item_container{
  width: 90%;
  height: 2.6em;
  border-bottom: 1rpx solid #eee;
  display:flex;
  flex-direction: row;
  justify-content:center;
  align-items:center;
  padding: 0.2em 0.6em;
}
.input_item_container_title{
  width: 30%;
}
.input_item_container > input{
  width: 70%;
  height: 100%;

}
