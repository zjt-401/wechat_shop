.container{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.user_top{
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  height:370rpx;
  padding-top: 40rpx;
  box-sizing:border-box;
  background-size: cover;
  background-image: url("http://image1.sansancloud.com/xianhua/2019_3/27/15/17/51_274.jpg")
}
.user_head_img{
  width:130rpx;
  height:130rpx;
  border-radius:20rpx;
  margin-bottom:18rpx;
  background: #fff;
  border:2rpx solid #fff;
}
.user_title{
  font-size: 26rpx;
  color: #fff;
  margin-bottom: 18rpx;
}
.user_name{
  font-size: 24rpx;
  color: #fff;
}
.order_menu{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: -30rpx;
  height: 60rpx;
  left: 0;
  width: 86%;
  background: #fff;
  border-radius: 15rpx;
  font-size: 28rpx;
  box-shadow: 5rpx 5rpx 5rpx #eee;
  margin:0 60rpx;
}
.order_menu_item{
  width: 33%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #eee;
  padding:10rpx 0;
}
.order_menu_item:last-child{
  border: none
}
.user_menu{
  display: flex;
  margin-top: 40rpx;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  font-size: 26rpx;
}
.user_menu_item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding:30rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f5f5f5;
}
.user_menu_item_link{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width:100%;
  font-size: 26rpx;
}
.kefu{
  padding: 0;
  margin: 0
}
.user_menu_item_left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user_menu_item_icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 40rpx;
}
.user_menu_item_name{

}
.user_menu_item_more{
  width: 20rpx;
  height: 20rpx; 
}
.user_footer{
  width: 100%;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing:border-box;
}
.user_footer_img{
  height: 120rpx;
}