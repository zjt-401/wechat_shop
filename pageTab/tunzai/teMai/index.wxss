@import"../../../wxParse/wxParse.wxss";/* 富文本 */
.body{
  width: 100%;
}
.promotionBanrdInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 26rpx 40rpx;
  box-sizing: border-box
}
.promotionBanrdLogo{
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
  margin-bottom: 13rpx;
  border:2px solid #CAC7C7;
}
.promotionBanrdName{
  font-size: 30rpx;
  font-weight:500;
  color: #000;
  margin-bottom: 13rpx;
}
.promotionBanrdDescribe{
  font-size:26rpx;
  color: #000;
  text-indent: 2em;
  line-height:36rpx;
  padding: 6rpx
}
.promotionCountDown{
  height:53rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.promotionName{
  font-size: 32rpx;
  color: #fff;
  font-weight:600;
  width: 360rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap
}
.setReminders{
  font-size: 28rpx;
  font-weight:500;
  width:120rpx;
  height:41rpx;
  background:#fff;
  border-radius:6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.promotionTimer{
  display: flex;
  flex-direction: row;
  align-items: center
}
.timeText{
  font-size: 24rpx;
  color: #fff;
  margin-left: 10rpx;
  font-weight:600;
}
.productList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap
}
.productItem{
  width:375rpx;
  height:440rpx;
  background:#fff;
  padding: 24rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.productImg{
  width: 280rpx;
  height: 280rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
}
.productImgUrl{
   height: 260rpx;
   width: 100%
}
.productPriceAndStock{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  white-space: nowrap
}
.productPrice{
  font-size:32rpx;
  font-weight: 500;
}
.productTagPrice{
  font-size:24rpx;
  text-decoration:line-through;
  color: #333333;
  margin-left: 6rpx
}
.productStock{
  min-width:120rpx;
  height:20rpx;
  background:#DADADA;
  border-radius:10rpx;
  position: relative;
  overflow:hidden;
  line-height:20rpx;
}
.usedProductStock{
  position: absolute;
  /* width:59rpx; */
  height:20rpx;
  border-radius:10px 0px 0px 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center
}
.usedProductStockPercent{
  font-size: 14rpx;
  color: #fff
}
.productName{
  font-size: 24rpx;
  color: #000
}
.shareBtn{
  position: absolute;
  top: 18rpx;
  right: 32rpx;
  z-index: 2
}
.shareBtnImg{
  width: 50rpx;
  height: 50rpx
}
.outPrint{
  position: absolute;
  width:210rpx;
  height:210rpx;
}
.outPrintBg{
  position: absolute;
  width:210rpx;
  height:210rpx;
  background:#282828;
  opacity:0.406;
  border-radius: 210rpx;
  top:50%;
  left: 50%;
  margin-top: -105rpx;
  margin-left: -105rpx;
}
.outPrintText{
  position: absolute;
  width:210rpx;
  height:210rpx;
  font-size:48rpx;
  font-weight:600;
  color: #fff;
  top:50%;
  left: 50%;
  margin-top: -105rpx;
  margin-left: -105rpx; 
  line-height:210rpx;
  text-align:center;
}
.sharaContent{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  height: 140rpx;
  width: 160rpx;
  background: #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  z-index:1;
}
.sharaLink{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  width:100%;
  border-bottom: 2rpx solid #fff;
  box-sizing:border-box;
}
.sharaPoster{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  width:100%;
  box-sizing:border-box;
}
.sharaLinkIcon{
   width: 45rpx;
   height: 45rpx; 
   margin-right: 20rpx
}
.sharaPosterIcon{
   width: 45rpx;
   height: 45rpx; 
   margin-right: 20rpx
}
.notice{
  width:700rpx;
  height:50rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 0rpx 12rpx 0rpx rgba(192,190,190,0.5);
  border-radius:30rpx;
  border:1rpx solid #fff;
  margin:10rpx 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.noticeIcon{
  width: 36rpx;
  height: 36rpx;
  margin-left: 36rpx;
  margin-right: 20rpx;
}
.noticeText{
  width:100%;
  height:32rpx;
  font-size:28rpx;
  padding-right: 10rpx;
  font-weight:400;
  color:#FF946B;
  line-height:30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  box-sizing:border-box;
}
.srcoll_view{
position: absolute;
white-space: nowrap;
height:50rpx;
line-height:50rpx;
/* animation:myfirst 10s linear infinite; */
}
@keyframes myfirst{
  0% {margin-left: 0}
  100% {margin-left: -1000rpx}
}
.scroll_view_border{
position: relative;
overflow: hidden;
height:50rpx;
width:100%;
line-height:50rpx;
}