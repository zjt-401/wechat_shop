  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.measureItemsCard{
  width: 80%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 5px;
}

.cardHead{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #ddd;
}
.closeCard{
  position: absolute;
  right: 10px;
  top: 10px;
}
.cardHeadTip{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cardHeadTip view{
