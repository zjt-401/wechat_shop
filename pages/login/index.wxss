/* pages/login/index.wxss */
.login_container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: 100% 100%;
  background-image: url(http://image1.sansancloud.com/taoditongzhuang/2017_04/05/12/20/51_422.jpg);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo{
  width: 98px;
  height: 98px;
  margin: 32px auto 24px;
}
/* 表单 */
.form{
  width: 100%;
}
.InputContainer{
    position: relative;
    width: 100%;
    height: 65px;
    border-bottom: 1px solid #dddddd;
    display: flex;
    flex-direction: row;
}
.InputContainer image{
    position: absolute;
    left: 20px;
    top: 21px;
    width: 25px;
    height: 25px;
}
.InputContainer input{
    height: 100%;
    font-size: 14px;
    padding-left: 80px;
    width: 70%;
    background: transparent;
}

.form button{
  width: 90%;
  margin-top: 15px;
  font-size: small;
}
.signIn{
  background:#8B572A;
  border:none;
  color:#fff;
}
.signUp{
  border: 1px solid #8B572A ;
  color: #8B572A;
}