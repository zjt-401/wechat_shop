.container{
  /* background: #f1f1f1;
  margin: 20rpx; */
}
.commentServantInfo{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}
.commentServantInfoleft{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.commentServantIcon{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border:1rpx solid #eee;
  border-radius:80rpx;
}
.commentServantName{
  font-size: 26rpx;
}
.commentData{
  display: flex;
  flex-direction: column;
}
.commentPingFen{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding:40rpx;
}
.commentPingFenRich{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  padding: 20rpx;
}
.commentPingFenList{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.commentPingFenItem{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}
.commentPingFenItem:last-child{
  margin-right: 0
}
.commentPingFenItemIcon{
  width: 60rpx;
  height: 60rpx;
}
.commentContent{
  display: flex;
  align-items: center;
  justify-content: center;
  border:1rpx solid #ddd;
  background:#fafafa;
  margin:20rpx;
}
.commentContentInput{
  width: 100%;
  font-size: 28rpx;
  padding: 20rpx;
}
.commitComment{
  margin-top: 20rpx;
  width: 100%;
  padding: 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing:border-box;
  position:fixed;
  bottom:0;
}