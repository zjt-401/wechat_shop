/* pages/order_commit_detail/index.wxss */ 
.butnForTuiKuan{
  padding: 8px 8px;
  border-radius: 5px;
}

 
/* 购物车列表 */
.cartContainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.cartShopName{
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: small;
}
.cartItems{
  display: flex;
  flex-direction: row;
  padding: 10px;
  overflow: hidden;
  background-color: #fff;
}
.itemCheckbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
   width: 80px;
}
.itemCheckbox image{
  width: 80px;
  height: 80px;
}

.item_infomation{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 10px;
  height: 80px;
}
.item_infomation_name{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: small;
}
.item_infomation_money{
  font-size: small;
  display: flex;
  flex-direction: column;
  color: #888;
}
.item_infomation_money text{
  margin-top: 10px;
}
/* 评分 */
.score_container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  
}
.ScoreItem{
  margin-left: 10px;
  margin-top: 10px;
}
.radioItem{
  width:7.6em;
  height: 3em;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
  font-size: xx-small;
  white-space: nowrap;
  overflow: hidden;
}
.checkedSco{
  border: 1px solid red !important;
}
/* 返回的text */
.backTextContainer{
  display: flex;
  flex-direction: column;
  padding: 10px;
  font-size: small;
}
.backTextContainer textarea{

  margin-top: 5px;
  padding: 10px;
  height: 5em;
  border: 1px solid #ddd; 
  border-radius: 5px;
  width:auto;
  margin-bottom: 10px;
}

/* 星评价 */

.scollViews{
  background: #fff;
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.scollViews .name{
  font-size: small;
  color: #333;
}
.scollViews .star_container{
  display: flex;
  flex-direction: row
}
.star_container .star{
  margin-left: 10px;
  width: 1.6em;
  height: 1.6em;
}
.star image{
  width: 100%;
  height:100%;
}
.backTextContainer button{
  margin-top: 1em;
  width: 100%;
  color: #fff;
  background: green;
}