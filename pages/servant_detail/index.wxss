.container{
  display: flex;
  flex-direction: column;
  background: #F8FBFF;
}
.servantBaseInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background: #fff;
  margin: 20rpx 20rpx 10rpx 20rpx;
  padding: 20rpx 0;
  box-sizing: border-box
}
.servantHeadImg{
  width: 200rpx;
  height: 200rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.servantHeadImgUrl{
  width: 200rpx;
  height: 200rpx;
  border-radius:200rpx;
}
.servantInfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.servantInfoItem{
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}
.servantDescription{
  padding: 18rpx 28rpx 28rpx 28rpx;
  display: flex;
  flex-direction: column;
  color: #888;
  font-size: 28rpx;
  border-radius: 20rpx;
  background: #fff;
  margin: 10rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box
}
.servantDescriptionTitle{
  font-weight: bold;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.servantDetails{
  font-size: 28rpx;
  color: #888;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.servantDetailsTitle{
  font-weight: bold;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx 10rpx 20rpx;
}
.servantrichText{
  padding: 0 20rpx 10rpx 20rpx;
}
.orderServant{
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  height: 80rpx;
  color: #fff;
  border-radius: 80rpx;
  margin: 20rpx;
  position: fixed;
  bottom: 10rpx;
  width:95%;
}