
/* 外卖模式的点单啊 */
.waimaiContainer{
  position: absolute;
  left: 0;
  right: 0; 
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  overflow: hidden;
}

/* 左边的type */
.leftScrollType{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width:25%;
  background: #f1f1f1;
  display: flex;
  flex-direction: column;
  font-size: xx-small;
  color: #777;
  overflow: hidden;
}
.TypeItem{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f5f0e9;
  padding: 15px 0;
}
.activeTypeItem{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  padding: 15px 0;
}
.TypeItem_iamge{
  width: 4em;
  height: 4em;
  margin-bottom: 10px;
}
/* 右边的商品 */
.RightProductContainer{
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width:75%;
  background: #fff;
  display: flex;
  flex-direction: column;
  font-size: small;
  overflow: scroll;
}

.productItem{
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  border-bottom: 1rpx solid #ddd;
  height: 10em;
}
.productItem > .productItemImage{
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.productItemImage >image{
  width: 7em;
  height: 7em;
}
.productItem >.productInfo{
  width: 50%;
}
.productInfo{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-end;
}
.productInfo_name{
  font-size: xx-small;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.productInfo_Price{
  color: red;
  font-size: x-small;
  margin-top: 10px;
}
.PRICE{
  font-size: x-large !important;
  font-weight: bold !important;
}
.productInfo_Nums{
  margin-top: 15px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.productInfo_Nums > image{
  width:12px;
  height: 12px;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  padding: 8px;
}
.font1{
  margin:0 5px;
  font-size: 16px;
}

.bottomHeight{
  height: 3.6em;
}
.font1{
  margin:0 10px;
  font-size: 16px;
}

/* 选择规格 */
.choose_measureItem{
  color: red;
  font-size: small;
  border: 1px solid #ccc;
  padding: 5px 8px;
  border-radius: 3px;
  margin-left: 5px;
}

/* 规格弹出卡片的 */
.measureItemsContainer{
  position: absolute;
  z-index: 12;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.measureItemsCard{
  width: 80%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 5px;
}

.cardHead{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #ddd;
}
.closeCard{
  position: absolute;
  right: 10px;
  top: 10px;
}
.cardHeadTip{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cardHeadTip view{
  height: 10px;
  width: 10px;
  background: red;
  margin-left: 10px;
}
.cardHeadName{
  padding: 10px 0;
}

.cardMid{
  width: 100%;
  
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.cardMidName{
  color: #aaa;
  font-size: small;
  padding: 10px;
}
.cardMidGuigeContainer{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding:0px 10px 10px 10px;
}
.cardMidGuigeContainer view{
  margin-right: 15px;
  padding: 5px 10px;
  border-radius: 8px;
  color: #000;
  border: 1px solid #ddd;
  margin-bottom: 10px;
}
.active{
   border: 1px solid red !important;
}
.submitMeasure{
  width: 100%;
  height: 2.6em;
  background: red;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.submitMeasure_price{
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: small;
}
.submitMeasure_addto{
   width: 40%;
   height: 100%;
   box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: small;
  border-left: 1px solid #fff;
}