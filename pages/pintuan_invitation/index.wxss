
@import '../../view-new/aikucun/measure_card.wxss';/*  detail_list_card  */ 
.container{
  padding: 20rpx;
  box-sizing: border-box;
}
.product_info{
  display: flex;
  flex-direction: row;
  height: 300rpx;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.product_left{
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.product_left_img{
  height: 300rpx;
  width: 300rpx;
}
.product_promtion_name{
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  left: 0;
  top: 0;
  height: 40rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  padding:4rpx 10rpx;

}
.product_right{
  margin-left: 20rpx;
  display: flex;
  width: 400rpx;
  height: 300rpx;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.product_name{
  font-size: 28rpx;
  color: #aaa
}
.product_price{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  font-size: 26rpx;
}
.product_tags{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.product_tags_item{
  margin-right:10rpx;
  padding:4rpx 10rpx;
  display:flex;
  align-items:center;
  color:#fff;
  font-size:24rpx;
  margin-bottom:10rpx;

}
.product_pindan_price{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.product_discount{
  font-size: 38rpx;
  margin-right: 10rpx;
  margin-left:-6rpx;
}
.product_count{
  color: #aaa;
  font-size: 26rpx;
}

.pindan_info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.pindan_info .pintuan_time_num{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}
.pindan_info .pintuan_time{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.pindan_info .pindan_users_list{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 60rpx;
  box-sizing: border-box;
  height: 140rpx;
  width: 100%
}
.pintuan_user_list{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.pintuan_user_item{
  border: 2rpx solid #e5e600;
  border-radius: 100rpx;
  width: 90rpx;
  height: 90rpx;
  margin-right: 15rpx;
  position: relative;
}
.user_head_img{
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}
.pintuan_user_list_tip{
  border: 4rpx solid #fff;
  width: 50rpx;
  height: 30rpx;
  border-radius: 30rpx;
  position: absolute;
  top:-4rpx;
  left:-6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  line-height:30rpx;

}
.unpintuan_user_item{
  border: 2rpx dashed #999;
  border-radius: 90rpx;
  width: 90rpx;
  height: 90rpx;
  margin-right: 15rpx;
  display: flex;align-items: center;
  justify-content: center;
}
.unuser_head_img{
  width: 40rpx;
  height: 40rpx;
}
.pintuan_invitation_button{
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  justify-content: center;
  color: #fff;
  height: 80rpx;
  border-radius: 10rpx;
  margin:0 0 20rpx 0;
  line-height:80rpx;
}
.pintuan_index_button{
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  justify-content: center;
  height: 80rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.pinduan_rule{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  font-size:26rpx;
  width:100%;
  height:70rpx;
  border-top:2rpx solid #eee;
}
.pinduan_rule .pinduan_rule_title{
  color: #999;
}
.pinduan_rule .pinduan_rule_list{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  color: #c9c9c9;
}
.pinduan_rule_list .pinduan_rule_item{
  display: flex;
  flex-direction: row;
}
.dot{
  margin: 0 10rpx;
}