
/* 外卖模式的点单啊 */
.waimaiContainer{
  position: absolute;
  left: 0;
  right: 0; 
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  overflow: hidden;
}

/* 左边的type */
.leftScrollType{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width:25%;
  background: #f1f1f1;
  display: flex;
  flex-direction: column;
  font-size: xx-small;
  color: #777;
  overflow: hidden;
}

.TypeItem{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f5f0e9;
  padding: 15px 0;
}
.activeTypeItem{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  padding: 15px 0;
}
.TypeItem_iamge{
  width: 4em;
  height: 4em;
  margin-bottom: 10px;
}
.ToOrderView_container{
}
.ToOrderView{
  position: fixed;
  font-size: xx-small;
  left: 0;
  width: 8%;
  overflow: hidden;
  height: 5em;
  background: #c53f43;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-top-right-radius: 2.4em;
  border-bottom-right-radius: 2.4em;
}
.ToOrderView1{
  bottom: 6em;
}
.ToOrderView2{
  bottom: 1em;
}
.ToOrderView image{
  width: 2em;
  height: 2em;
}
.ToOrderView text{
  margin-left: 6px;
  margin-right: 1.4em;
  color: #fff;
  width: 12px;
}
/* 右边的商品 */
.RightProductContainer{
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width:75%;
  background: #fff;
  display: flex;
  flex-direction: column;
  font-size: small;
  overflow: scroll;
}

.productItem{
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  border-bottom: 1rpx solid #ddd;
  height: 10em;
}
.productItem > .productItemImage{
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.productItemImage >image{
  width: 7em;
  height: 7em;
}
.productItem >.productInfo{
  width: 50%;
}
.productInfo{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-end;
}
.productInfo_name{
  font-size: xx-small;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.productInfo_Price{
  color: red;
  font-size: x-small;
  margin-top: 10px;
}
.PRICE{
  font-size: x-large !important;
  font-weight: bold !important;
}
.productInfo_Nums{
  margin-top: 15px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.productInfo_Nums > image{
  width:12px;
  height: 12px;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  padding: 8px;
}
.font1{
  margin:0 5px;
  font-size: 16px;
}

.bottomHeight{
  height: 10em;
}
/* 下面的购物车 */
.bottomCartContainer{
  position: absolute;
  right: 0;
  left: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 12;
  width:100%;
  height: 3.6em;
  background: #c53f43;
  color: #fff;
  display: flex;
  flex-direction: row;
  font-size: small;
}
.sureButn{
  width: 30%;
  height: 100%;
  border-left: 1px solid #f1f1f1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cartInfo{
  width: 69%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.cartInfo > Price{
  color: #fff;
  font-size: small;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.imageCartContainer{
  height: 100%;
  width: 6em;
  overflow: hidden;
  position: relative;
}
.imageCartContainer image{
  width: 25px;
  height: 25px;
}
.countCartNum{
  position: absolute;
  top: 5px;
  right: 15px;
  padding: 0 3px;
  background: orange;
  color: #fff;
  border-radius: 8px;
  font-size: xx-small;
}
/* 弹出的购物车 */
.waimai_cart_container_forTap{
  width: 100%;
  position: fixed;
  right: 0;
  left: 0;
  bottom: 3.6em;
  z-index: 12;
  font-size: small;
}
.waimai_cart_container{
 
  width:100%;
  height: 0;
  background: #ffffff;
  color: #000;
  display: flex;
  flex-direction: column;
  font-size: small;
}
/* 小头头 */
.Tap_cart{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.Tap_cart > view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  width: 30px;
  height: 15px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  line-height: 10px;
}
.Tap_cart .Tap_cart_v1{
  background: #c53f43;
  color: #fff;
  
}
.Tap_cart .Tap_cart_v2{
  background: #fff;
  color: #000;
 
}

.waimai_cart_item{
  padding: 10px;
  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}
.waimai_cart_item_info{
  width: 60%;
  font-size: x-small;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.waimai_cart_item_info_name{
  font-weight: bold;
}
.waimai_cart_item_info_price{
  margin-top: 10px;
  color: red;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.waimai_cart_item_info_price2{
  font-size: large !important;
}
.waimai_cart_item_nums{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.waimai_cart_item_nums > image{
  width:12px;
  height: 12px;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  padding: 8px;
}
.font1{
  margin:0 10px;
  font-size: 16px;
}


