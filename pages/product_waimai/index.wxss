/* 选择规格 */
.choose_measureItem{
  color: red;
  font-size: small;
  border: 1px solid #ccc;
  padding: 5px 8px;
  border-radius: 3px;
  margin-left: 5px;
}

/* 规格弹出卡片的 */
.measureItemsContainer{
  position: absolute;
  z-index: 12;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.measureItemsCard{
  width: 80%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 5px;
}

.cardHead{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #ddd;
}
.closeCard{
  position: absolute;
  right: 10px;
  top: 10px;
}
.cardHeadTip{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cardHeadTip view{
  height: 10px;
  width: 10px;
  background: red;
  margin-left: 10px;
}
.cardHeadName{
  padding: 10px 0;
}

.cardMid{
  width: 100%;
  
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.cardMidName{
  color: #aaa;
  font-size: small;
  padding: 10px;
}
.cardMidGuigeContainer{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding:0px 10px 10px 10px;
}
.cardMidGuigeContainer view{
  margin-right: 15px;
  padding: 5px 10px;
  border-radius: 8px;
  color: #000;
  border: 1px solid #ddd;
  margin-bottom: 10px;
}
.active{
   border: 1px solid red !important;
}
.submitMeasure{
  width: 100%;
  height: 2.6em;
  background: red;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.submitMeasure_price{
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: small;
}
.submitMeasure_addto{
   width: 40%;
   height: 100%;
   box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: small;
  border-left: 1px solid #fff;
}

.waimai_cart_item_info_measureCartensian{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: small;
  color: #999;
  margin-top: 5px;
}
.waimai_cart_item_info_measureCartensian view{
  margin-right: 10px;
}