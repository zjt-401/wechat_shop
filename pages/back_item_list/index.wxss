/* 购物车列表 */
.cartContainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  color: #888;
  background: #fff;
  border-bottom: 1em solid #f2f2f2;
  font-size: 0.8em;
}
.cartShopName {
  padding: 1em;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.cartItems{
  display: flex;
  flex-direction: row;
  padding: 1em;
  overflow: hidden;
  position: relative;
  background-color:#f6f6f6;
}
.itemCheckbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}
.itemCheckbox image{
  width: 5em;
  height: 5em;
}

.item_infomation{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10px;
}
.item_infomation_name{
  word-break: break-all;
}
.item_infomation_name1{
  
}
.item_infomation_money{
  font-size:0.8em;
  display: flex;
  flex-direction: column;
}
/* 加和减 */
.item_infomation_nums{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding:0.6em 1em;
  border-top: 1px solid #eee;
}

.item_infomation_nums text{
  padding: 5px;
  font-size: 1em;
  color: #aaa;
}
.butn_container{
  padding: 1em;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #dddddd;
}
.butn_container2{
  padding: 1em;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #dddddd;
}
.butn_container2 text{
  margin-left: 0.4em;
  border: 1px solid #c0c0c0;
  padding: 0.2em 0.4em;
  border-radius: 0.2em;
}
.none{
  color: #777;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}