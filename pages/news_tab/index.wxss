  font-weight:bold;
}
.ListDataItemWord text{ 
  margin-left:10px;
}
.ListDataItemWord .word2 {
  font-size: 25rpx;
  color: #aaa;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.ListDataItemImage{
  width: 30%;
  height: 100%;
  overflow: hidden;
  border-radius: 0.2em;
}
.ListDataItemImage image{
  width: 100%;
  height: 100%;
}