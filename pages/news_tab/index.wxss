/* pages/news/index.wxss */


::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
page{
  background: #f1f1f1;
  height: 100%;
}
 /* typesearch */
.typeSearchContainer{
  position:fixed;
  z-index:111;
  width: 100%;
  height: 70rpx;

}
.search_input_bg{
  padding: 20rpx;
  background: #fff;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing:border-box;
}
.search_input{
  border-radius: 60rpx;
  height: 60rpx;
  background: #eee;
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between
}
.search_input_left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search_input .input{
  font-size: 24rpx;
  margin-left: 20rpx;
}
.input_img{
  width: 35rpx;
  height: 35rpx;
}
.empty_button{
  color: #fff;
  background: #999;
  width: 30rpx;
  height: 30rpx;
  font-size: 22rpx;
  border-radius: 30rpx;
  line-height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
  opacity: 0.8;
  cursor: pointer;
}
.typeSearch{
  background: #fff;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #ccc;
  box-sizing: border-box;
  justify-content: space-between;
  color:#888;

}
.typeSearch > view{
  width: 25%;
  box-sizing: border-box;
  font-size: small;
  position: relative;
}
.item_icon{
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx
}
.typeSearch .item_icon image{
  width: 40rpx;
  height: 40rpx;
}
.border_left{
  position: absolute;
  left: 0;
  border-left: 1rpx solid #ccc;
  top: 20%;
  bottom: 20%;
}
.typeSearch image{
  height:40rpx;
  width: 40rpx;
}
.typeSearch_view_height{
  height: 90rpx;
  background: #f1f1f1;
}


 /*  */
.smoprice{
  font-size: xx-small;
  color: red;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*分类弹出来的样式*/
.typeSearch_item_container{
  position: fixed;
  top: 170rpx;
  left: 0;
  right: 0;
  height: 60%;
  width: 100%;
  z-index: 110;
  background: #fff;
}

 .typeSearch_item_left_container{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  height: 100%;
  right: 50%;
  overflow-x: hidden;
  overflow-y: scroll;
  
} 

.searchPrice{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

 .typeSearch_item_left_container cover-view{

  font-size: small;
  background: #f1f1f1;
  height:100rpx;
  display:flex;
  line-height: 100rpx;
  flex-direction: column;
  justify-content: flex-start

} 
.typeSearch_item_left_container .line,.typeSearch_item_right_container .line{
  width: 100%;
  height: 2rpx; 
  background: #ccc;
}
.typeSearch_item_left_container .ml_48{
  background: #fff;
  margin-left:48rpx;
}
.typeSearch_item_right_container{
 background: #fff;
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  right: 0;
  overflow-x: hidden;
  overflow-y: scroll;
}
.typeSearch_item_right_container cover-view{
  
  font-size: small;
  background: #fff;
  height:100rpx;
  display:flex;
  flex-direction: column;
  line-height: 100rpx;
  color:#888;
  justify-content: space-between

}
/* 没有商品时 */
