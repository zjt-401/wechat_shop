   .ListDataItem{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 26rpx 20rpx;
    height: 180rpx;
    background: #fff;
    border-bottom:2rpx solid #eee;
  }
.publishTime{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.publishTime text{
  margin:0;
}
.ListDataItemWord  .time{
  font-size: 24rpx;
  color: #999;
  margin: 0
}
.publishTime_icon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}
.ListDataItemWord{
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.lineheight_title{
  height:2em;
  line-height:2em;
  white-space: normal;
