/* 钱 */
.moneyContainer{
  height: 4em;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size:xx-large;
  color: green; 
  z-index: 2;
  border-bottom: 1px solid #ccc;
}
/*  */
.product_page_container2{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.moneyitem{
  display: flex;
  flex-direction: column;
  font-size: small;
  border-bottom: 1px solid #ddd;
}
.eventTypeName{
  background: #ddd;
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.eventDerection{
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.eventDerection .left{
  width: 70%;
  word-break: break-all;
  display: flex;
  flex-direction: column;
}

.eventDerection .right{
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: large;
}
.time{
  margin-top: 5px;
}
/* 没有商品时 */
.none image{
  width: 30%;
}
.none text{
  margin-top: 10px;
}
