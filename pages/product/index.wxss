 /* typesearch */
.typeSearchContainer{

  
}
  
.typeSearch{
  position: fixed;
  z-index:111;
  top: 0;
  width: 100%;
  height: 3em;
  background: #fff;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #ccc;
}
.typeSearch > view{
  width: 25%;
  box-sizing: border-box;
  font-size: small;
  padding: 1em 0;
  position: relative;
}
.border_right{
  position: absolute;
  right: 0;
  border-right: 1rpx solid #ccc;
  top: 20%;
  bottom: 20%;
}
.typeSearch image{
  height: 1em;
  width: 1em;
}
.typeSearch_view_height{
  height: 3em;
  background: #f1f1f1;
}


 /*  */
.smoprice{
  font-size: xx-small;
  color: red;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*分类弹出来的样式*/
.typeSearch_item_container{
  position: fixed;
  top: 3em;
  left: 0;
  right: 0;
  height: 60%;
  width: 100%;
  z-index: 110;
  background: #fff;
}

 .typeSearch_item_left_container{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  height: 100%;
  right: 50%;
  overflow-x: hidden;
  overflow-y: scroll;
  
} 

.searchPrice{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

