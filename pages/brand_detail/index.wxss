/* 大师的商品 */
.product_page_container{
  background: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-bottom: 1em;
}
.product_items{
  width: 46%;
  margin: 1%;
  padding: 1%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
  background: #fff;
  border-radius: 5px;
}
.product_items image{
  width: 100%;
  height: 9em;
  border-radius: 5px;
}
.product_items view{
  height: 2.6em;
  font-size: small;
  margin-top: 5px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.product_items text{
  font-size: small;
  margin-top: 5px;
}



