/* pages/yijian_fankui/index.wxss */

.container{
 background: #f3f3f3;
}
.backTextContainer{
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 0.8em;
  padding: 0.6em;
  border-radius: 0.2em;
}
.backText{
  margin: 0.8em 0.6em;
}
.backTextContainer textarea{
  padding: 0.6em;
  margin: 0.4em 0;
  width: 90%;
  height: 4em;
  border: 1px solid #ddd; 
  border-radius: 0.4em;
}
.inputContainer{
  display:flex;
}
.backTextContainer input{
  padding: 0.6em;
  width: 100%;
  height: 1.2em;
  border: 1px solid #ddd; 
  border-radius: 0.4em;
}

.backText_name{
  padding-bottom: 0.8em;
  background: #fff;
  text-align: left;
  font-size: 1em;
}
/* 退款标签 */
.backTags_container{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.backTags_container view{
  margin-right: 0.8em;
  padding: 0.4em 0.8em;
  border-radius: 0.2em;
  color: #777;
  border: 1px solid #ddd;
  margin-bottom: 0.8em;
}
.activeTag{
   border: 1px solid red !important;
   color: #000 !important;
}


button{
  margin-top: 1em;
  width: 100%;
  color: #fff;
  background: green;
}


