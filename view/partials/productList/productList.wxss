.tags_content::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.detail_list_mode1{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center; 
  flex-wrap: wrap;
  padding: 10px 0px 10px 10px;
  background: #f9f9f9; 
} 
