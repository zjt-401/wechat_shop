
.promotion_product_list{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.promotion_product_item{
  display: flex;
  flex-direction: column;
  margin-bottom:50rpx;
  border-bottom:1rpx solid #ddd;
  padding-bottom:50rpx;
}
.promotion_product_head{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-bottom: 10rpx;
}
.promotion_time{
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  top:0;
  font-size:22rpx;
  background:rgba(255,255,255,0.8);
  width:43%;
  color:#fff;
  padding:6rpx;
  box-sizing:border-box;
  right: 16rpx;
}
.promotion_start_time{
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border:1rpx solid #ff547b;
  overflow:hidden;
}
.promotion_start_time_text{
  padding:6rpx;
  background:#ff547b;
}
.promotion_start_time_value{
  color: #ff547b;
  margin:6rpx;
}
.promotion_end_time{
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border:1rpx solid #ff547b;
  overflow:hidden;

}
.promotion_end_time_text{
  background:#ff547b;
  padding:6rpx;
}
.promotion_end_time_value{
  margin:6rpx;
  color: #ff547b
}
.promotion_product_img{
  height: 340rpx;
  width:100%;
}
.promotion_product_price{
  font-size: 36rpx;
  height:44rpx;
}
.promotion_product_info{
  display: flex;
  flex-direction: column;
  margin-top:10rpx;
}
.promotion_product_name{
  font-size: 30rpx;
  letter-spacing: 2rpx;
  margin-bottom:16rpx;
}
.promotion_product_bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.promotion_product_allprice{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  font-size: 36rpx;
  color: red;
}
.promotion_product_tagprice{
  text-decoration: line-through;
  color: #ddd;
  font-size: 26rpx;
  margin-left: 4rpx
}
.promotion_product_buy{
  background: red;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:10rpx 20rpx;
  border-radius:10rpx;
}