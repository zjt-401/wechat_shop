/*时间  */
.time{
  height:40rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.timeBox{
  height:40rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center; 
  justify-content: center;
  margin-left: 8rpx;
  border-radius:4rpx;
  font-weight: bold; 
  width:40rpx;
}
.timeBoxDay{
  height: 40rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 8rpx;
  border-radius:4rpx;
  padding:0 10rpx;
  box-sizing: border-box;
  font-weight: bold; 
  min-width:40rpx;
}