.bg{
  position: fixed;
  width:100%;
  height: 100%;
  top:0;
  left: 0;
  background: #000;
  filter:alpha(opacity:60); 
  opacity:0.6;  
  -moz-opacity:0.6;
  -khtml-opacity: 0.6;
  z-index:1000;
}
.content{
  width:680rpx;
  height: 1100rpx;
  position: fixed;
  top:80rpx;
  left: 50%;
  background: #fff;
  margin-left: -340rpx;
  z-index: 1001;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.close{
  position: fixed;
  top:65rpx;
  right:5px;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  background: #999;
  color: #fff;
  line-height: 45rpx;
  text-align: center;
  z-index: 1002
}
.box_shareCanvas{
  width: 550rpx;
  height: 800rpx;
  margin-top: 60rpx;
  box-shadow: 2px 2px 10px #999;
  box-sizing: border-box
}
.canvas{
  width: 100%;
  height: 100%;
}
.saveImgBtn{
  width: 550rpx;
  height: 100rpx;
  background: #999;
  color: #fff;
  margin-top: 60rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.saveText{
  font-size: 25rpx;
  color: #999;
  margin-top: 30rpx;
}