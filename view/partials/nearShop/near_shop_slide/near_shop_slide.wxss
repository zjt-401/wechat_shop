

.top{
  width: 684rpx;
  height: 75rpx;
  display: flex;
  flex-direction: row;
  padding-top: 25rpx;
  padding-left: 34rpx;
  padding-right: 32rpx;
  justify-content: space-between;
}

.topTitle{
  width:154rpx;
height:50rpx;
font-size:36rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(51,51,51,1);
line-height:50rpx;
}
.topImg{
  width: 30rpx;
  height: 38rpx;
}
.topImg image{
  width: 100%;
  height: 100%;
 
}

/* 滑动部分 */
.near_shop_wrapp{
  width: 100%;
  height: 364rpx;
  white-space: nowrap;
  display: flex;
}

.near_shop_box {
   width: 320rpx;
   height: 360rpx;
   display: inline-block;
   margin-left: 24rpx;
   position: relative;
}

.near_shop_banner{
  width: 320rpx;
  height: 264rpx;
  overflow: hidden;
  position: relative;
}
.near_shop_banner_img{
  width: 320rpx;
  height: 220rpx;
  overflow: hidden;
}
.near_shop_banner_img image{
  width: 100%;
  height: 100%;

}
/*  */
.haoPing{
height:40rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(175,179,187,1);
line-height:40rpx;

}
/* 定位的logo */
.near_shop_logo{
  width:58rpx;
  height:58rpx;
  border-radius: 68rpx;
  padding: 10rpx;
  position: absolute;
  right: 40rpx;
  bottom: 0rpx;
  background-color:white;
  overflow: hidden;
}
.near_shop_logo image{
  width: 100%;
  height: 100%;
  border-radius: 50%;

}
/* 店铺名 */
.near_shop_name{
 height:40rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(51,51,51,1);
line-height:40rpx;

}

/* 店铺标签 */
.near_shop_shopTag{
height:54rpx;
display: flex;
flex-direction: row;
}
.near_shop_shopTag_item{
height:34rpx;
border-radius:8rpx;
font-size: 20rpx;
margin-right: 10rpx;
padding: 5rpx;
line-height: 34rpx;
}