.recommend_scroll_x_box {
  height: 242rpx;
  white-space: nowrap;
  display: flex;
}



.recommend_hot_box {
  width: 222rpx;
  height: 222rpx;
  margin-left: 24rpx;
  margin-top: 20rpx;
  display: inline-block;
  /* background-color: #FE3D53; */
  text-align: center;
   position: relative;
}

.CouponsImg {
  width: 222rpx;
  height: 222rpx;
}
.CouponsImg image{
  width: 100%;
  height: 100%;
}
.choose{
  width: 150rpx;
  height: 45rpx;
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  background-color: #FE313C;
  z-index: 1000;
  text-align: center;
  border-radius: 20rpx;

}
.choose text{
font-size: 30rpx;
line-height: 45rpx;
color: white;

}
.footer{
  width: 750rpx;
  height: 80rpx;
  background: linear-gradient(to right, #FE313C , #FF8A8A);
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.activeName{
    width: 100rpx;
  height: 80rpx;
  text-align: center;

}
.activeName text{
    font-size: 40rpx;
    line-height: 80rpx;
    color: white;
  
}
.time{
  width: 400rpx;
  height: 80rpx;
   /* background-color: blue;  */
  display: flex;
  flex-direction: row;
}
.timeText text{
  font-size: 28rpx;
  line-height: 80rpx;
  color: white;
}
.timeBox{
  width: 60rpx;
  height: 50rpx;
  background-color: white;
  margin-top: 15rpx;
  text-align: center;
  margin-right: 5rpx;
  border-radius: 10rpx;
}
.timeBox text{
  font-size: 28rpx;
  line-height: 50rpx;
  background-color: white;
}

